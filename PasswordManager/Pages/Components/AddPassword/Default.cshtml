<button class="btn btn-info text-dark" data-toggle="modal" data-target="#add-password-dialog">Add</button>

@{
    PasswordViewModel NewEntry = new PasswordViewModel();
}


<div class="modal fade" tabindex="-1" id="add-password-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add a password</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">&times;</button>
            </div>
            <div class="modal-body">
                <p><input class="form-control" asp-for="@NewEntry.Destination"/></p>
                <p><input class="form-control" asp-for="@NewEntry.UserName"/></p>
                <p><input class="form-control" asp-for="@NewEntry.Password"/></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
